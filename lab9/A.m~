close all;
clearvars;
clc;

I = imread('src/knee.png');

figure;
imshow(I);

I = double(I);

%[X, Y] = ginput(1);

X = 200;
Y = 350;

[size_x, size_y] = size(I);

visited = zeros(size_x, size_y);
segmented = zeros(size_x, size_y);

stack = zeros(10000, 2);
iStack = 1;

stack(iStack, 1) = X;
stack(iStack, 1) = Y;
iStack = iStack + 1;

visited(X, Y) = 1;
segmented(X, Y) = 1;

while iStack > 1
    X = stack(iStack, 1);
    Y = stack(iStack, 2);
    
    if X == 1 || Y == 1 || X == size_x || Y == size_y
        
    end
    
    neighbours = [X+1, Y+1; X+1, Y; X+1, Y-1; X, Y+1; X, Y-1; X-1, Y+1; X-1, Y; X-1, Y-1];
    
    for i = 1:8
       nX = neighbours(i, 1);
       nY = neighbours(i, 2);
       
       if(abs(I(nX, nY) - I(X, Y)) < 4 && visited(nX, nY) == 0)
           
       end
    end
    
    
    
    
    
    
    
end










